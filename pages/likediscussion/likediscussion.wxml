<view class='topTabSwiper'>
    <view class='tab  {{currentData == 0 ? "tabBorer" : ""}}' data-current="0" bindtap='checkCurrent'>喜欢 ({{barlikediscussion.likeNumber}})</view>
    <view class='tab  {{currentData == 1 ? "tabBorer" : ""}}' data-current="1" bindtap='checkCurrent'>讨论 ({{barlikediscussion.discussionNumber}})</view>
</view>
<swiper current="{{currentData}}" class='swiper' style="height:600px;" duration="300" bindchange="bindchange">
    <swiper-item>
        <view class="c-minheight carditem01">
            <view class="paddinghalfrem wx-view_QvvUkU">
                <block wx:for-items="{{barlikediscussion.like}}" wx:key="{{item.openid}}">
                    <image class="wx-image_tBcdCT" mode="aspectFill" src="{{item.avatarUrl}}"></image>
                </block>
            </view>
            <view class="paddinghalfrem wx-view_adF7Mw">
                <view class="wx-view_2gazUr">
                    <view class="wx-view_DKe6UT">
                        <image class="wx-image_6E2A1o" mode="aspectFit" src="/images/like.png"  />
                        <text class="c-block wx-text_id0VJj">共计：{{barlikediscussion.likeNumber}}</text>
                    </view>
                </view>
                <text class="c-block wx-text_9Wn0Di">最近更新：{{barlikediscussion.lastUpdateTime ? barlikediscussion.lastUpdateTime : '未知'}}</text>
            </view>
        </view>
    </swiper-item>
    <swiper-item>
        <form bindsubmit="formSubmit" bindreset="formReset">
            <view class="c-minheight carditem01">
                <view class="paddinghalfrem wx-view_QvvUkU">
                    <textarea class="td-right" name="content" placeholder="想说点啥？"  auto-height  />
                </view>
                <view class="paddinghalfrem wx-view_adF7Mw">
                    <view class="wx-view_2gazUr">
                        <view class="wx-view_DKe6UT">
                            <image class="wx-image_6E2A1o" mode="aspectFill" src="{{userInfo.avatarUrl}}"></image>
                            <text class="c-block wx-text_id0VJj">{{userInfo.nickName}}</text>
                        </view>
                    </view>
                    <text class="c-block wx-text_9Wn0Di">{{barlikediscussion.lastUpdateTime ? barlikediscussion.lastUpdateTime : '未知'}}</text>
                </view>
                <view class="paddinghalfrem">
                    <button class="btn" size="mini" type="primary" formType="submit">提交</button>
                </view>
            </view>
        </form>
        <block wx:for-items="{{barlikediscussion.discussion}}" wx:key="{{item.openid}}">
            <view class="c-minheight carditem01">
                <view class="paddinghalfrem wx-view_QvvUkU">
                    {{item.content}}
                </view>
                <view class="paddinghalfrem wx-view_adF7Mw">
                    <view class="wx-view_2gazUr">
                        <view class="wx-view_DKe6UT">
                            <image class="wx-image_6E2A1o" mode="aspectFill" src="{{item.avatarUrl}}"></image>
                            <text class="c-block wx-text_id0VJj">{{item.nick}}</text>
                        </view>
                    </view>
                    <text class="c-block wx-text_9Wn0Di">{{item.createTime}}</text>
                </view>
            </view>
        </block>
    </swiper-item>
</swiper>

