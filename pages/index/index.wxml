<view class="container">
  <map
    id="map"
    latitude="39.940690"
    longitude="116.403350"
    scale="6"
    controls="{{controls}}"
    bindcontroltap="controltap"
    markers="{{markers}}"
    bindmarkertap="markertap"
    polyline="{{polyline}}"
    bindregionchange="regionchange"
    show-location
    style="width: 100%; height: 400px;"
  ></map>
</view>